{
	"brief": "调试",

	"device": "GPU",
	"device_id": 1,
	"random_seed": 0,
	"mode" : "TRAIN",

	"model": {
		"name": "JIT",
		"model_file": "test/yolov3.pth",
		"reinitialize": true
	},
	"loss": {
		"name": "YOLO",
		"xy_weight": 0.5,
		"size_weight": 0.5,
		"conf_weight": 1.0,
		"prob_weight": 1.0
	},
	"train_data": {
		"name": "YOLO",
		"shuffle": false,
		"image_list": "/mnt/data/prjdata/voc/train.txt"
	},

	"test_data": {
		"name": "YOLO",
		"shuffle": false,
		"image_list": "/mnt/data/prjdata/voc/2007_train.txt"
	},

	"optimizer": {
		"name": "SGD",
		"learning_rate": 0.0005,
		"lr_step_epochs": 100,
		"lr_step_gamma": 0.5,
		"weight_decay": 1e-4,
		"momentum": 0.9
	},

	"max_epoch": 1000,
	"batch_size": 12,

	"save_state_epochs": 1,
	"state_path": "experiments/states",
	"load_last": true,
	"log_path": "experiments/log",
	"log_iters": 10,
	"test_result_file": "experiments/log/test.res"
}
